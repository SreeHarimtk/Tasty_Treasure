<script>
  
  

  async function addToCart(productId) {
    try {
        console.log('Function called');
        const response = await fetch(`/addtocart?id=${productId}`, {
            method: 'GET',
          
        });

        if (response.ok) {
            const result = await response.json();
            alert(`Item added to the cart: ${result.message}`);
            console.log(result.message);
        } else {
            console.log('Failed to add product to cart.');
        }
    } catch (error) {
        console.log('Error:', error);
    }
}


  

const debounce = function (fn, delay) {
    let timer;
    return function () {
      let prev = this,
        args = arguments;
      clearTimeout(timer);
      timer = setTimeout(() => {
        fn.apply(prev, args);
      }, delay);
    };
  };

  const handleSearch = debounce(function () {
    const searchQuery = document.getElementById('searchInput').value;
    fetch(`/debouncesearch?search=${searchQuery}`)
      .then(response => response.json())
      .then(data => {
        console.log('Data:', data);
        displayProducts(data.products);
      })
      .catch(error => {
        console.error('Error fetching data:', error);
      });
  }, 300);

  function displayProducts(products) {
  const productsContainer = document.getElementById('productsContainer');
  productsContainer.innerHTML = ''; // Clear existing content

  products.forEach(function (item) {
    const productCard = document.createElement('div');
    productCard.className = 'col-lg-3 col-md-4 col-sm-6 cards mb-5';
    // productCard.classList.add(".viewcards")
    productCard.innerHTML = `
      <div class="card ${item.isActive ? 'border-warning shadow border-2' : 'border-muted'}" style="width: 18rem;">
        <a href="/productdetails?id=${item._id}">
          <img src="../uploads/${item.image[0]}" class="card-img-top img-fluid ${item.isActive ? '' : 'grayscale-image'}" style="height: 40vh; object-fit: cover;" alt="...">
        </a>
        <div class="card-body">
          <h5 class="card-title">${item.name}<span class="text-muted fs-6"> (${item.category})</span></h5>
          <p class="cardtext">${item.description}</p>
          ${item.isActive ? `
            <button class="btn btn-warning btn-hover-effect" onclick="addToCart('${item._id}')">
              <h5>Add To Cart</h5>
            </button>
          ` : `
            <button class="btn btn-muted btn-hover-effect" disabled>
              <h5>Not Available</h5>
            </button>
          `}
        </div>
      </div>
    `;

    productsContainer.append(productCard);
  });
}
  


</script>

