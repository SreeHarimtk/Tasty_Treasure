<script>


let displayedOrders = []; // Define an array to store the displayed orders

document.addEventListener('DOMContentLoaded', function () {
  const dailyBtn = document.getElementById('dailyBtn');
  const weeklyBtn = document.getElementById('weeklyBtn');
  const monthlyBtn = document.getElementById('monthlyBtn');
  const yearlyBtn = document.getElementById('yearlyBtn');
  const startDateInput = document.getElementById('startDate');
  const endDateInput = document.getElementById('endDate');

  fetchData('daily');

  dailyBtn.addEventListener('click', function () {
    fetchData('daily');
  });

  weeklyBtn.addEventListener('click', function () {
    fetchData('weekly');
  });

  monthlyBtn.addEventListener('click', function () {
    fetchData('monthly');
  });

  yearlyBtn.addEventListener('click', function () {
    fetchData('yearly');
  });

  startDateInput.addEventListener('change', function () {
    fetchOrdersByDateRange();
  });

  endDateInput.addEventListener('change', function () {
    fetchOrdersByDateRange();
  });

  function fetchOrdersByDateRange() {
    const startDate = startDateInput.value;
    const endDate = endDateInput.value;
  
    console.log(startDate, endDate)
    if (startDate && endDate) {
      fetch(`/customDateReports?startDate=${startDate}&endDate=${endDate}`)
        .then(response => response.json())
        .then(data => {
          console.log(data);
          displayedOrders = data;
          updateTable();
        })
        .catch(error => {
          console.error('Error fetching data:', error);
        });
    }
  }

  function fetchData(timeRange) {
    // Reset start and end date inputs
    startDateInput.value = '';
    endDateInput.value = '';

    fetch(`/fetchreports?timeRange=${timeRange}`)
      .then(response => response.json())
      .then(data => {
        console.log(data);
        displayedOrders = data;
        updateTable();
      })
      .catch(error => {
        console.error('Error fetching data:', error);
      });
  }

  function updateTable() {
    const tableBody = document.querySelector('.table tbody');
    tableBody.innerHTML = '';

    displayedOrders.forEach(order => {
      const row = document.createElement('tr');
      row.classList.add('fonts');

      const dateCell = document.createElement('th');
      dateCell.classList.add('fonts');
      dateCell.setAttribute('scope', 'row');
      dateCell.textContent = new Date(order.createdAt).toLocaleDateString();
      row.appendChild(dateCell);

      const orderIdCell = document.createElement('th');
      orderIdCell.classList.add('fonts');
      orderIdCell.setAttribute('scope', 'row');
      orderIdCell.textContent = order._id;
      row.appendChild(orderIdCell);

      const totalPriceCell = document.createElement('td');
      totalPriceCell.classList.add('fonts', 'd-none', 'd-sm-table-cell', 'd-md-table-cell');
      totalPriceCell.textContent = `â‚¹${order.totalPrice}`;
      row.appendChild(totalPriceCell);

      const paymentMethodCell = document.createElement('td');
      paymentMethodCell.classList.add('fonts', 'd-none', 'd-sm-table-cell', 'd-md-table-cell');
      paymentMethodCell.textContent = order.paymentMethod;
      row.appendChild(paymentMethodCell);

      tableBody.appendChild(row);
    });
  }
});




  document.addEventListener('DOMContentLoaded', function () {
    const downloadPdfBtn = document.getElementById('downloadPdfBtn');

    downloadPdfBtn.addEventListener('click', function () {
  
      const content = document.getElementById('salesReportTable'); 
      html2pdf(content);
    });
  });

  
</script>




