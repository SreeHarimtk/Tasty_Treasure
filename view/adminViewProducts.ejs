  <!-- centreform -->
  <div class="text-center center-div container py-2 usercentrediv  ">
    <section class="intro">
      <div class="bg-image h-100">
        <div class="mask d-flex align-items-center h-100">
          <div class="container-fluid container-sm">
            <div class="row justify-content-center">
              <div class="col-12">
                <div class="card mask-custom">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-borderless text-white mb-0">
                        <thead
                          style="
                            color: black;
                            font-size: x-large;
                            border-bottom: 1px solid black;
                          "
                        >
                          <tr>
                            <th scope="col">Name</th>
                            <th scope="col" class="d-none d-sm-table-cell">Category</th>
                            <th scope="col" class="d-none d-sm-table-cell">SubCategory</th>
                            <th scope="col" class="d-none d-sm-table-cell">Price</th>
                            <th scope="col">Image</th>
                            <th scope="col" class="d-none d-sm-table-cell">Action</th>
                          </tr>
                        </thead>
                        <tbody
                          style="
                            color: black;
                            font-weight: normal;
                            font-size: larger;
                          "
                        >
                          <br />
                          <tr class="fonts">
                            <% product.forEach(function(item) { %>
                              <th class="fonts" scope="row"><%= item.name %></th>
                              <td class="fonts d-none d-sm-table-cell d-md-table-cell"><%= item.category %></td>
                              <td class="fonts d-none d-sm-table-cell d-md-table-cell"><%= item.subcat %></td>
                              <td class="fonts d-none d-sm-table-cell d-md-table-cell">â‚¹<%= item.price %>/-</td>
                              <td class="fonts">
                                <img src="./uploads/<%= item.image[0] %>" style="width: 100px; height: 80px" />
                              </td>
                              <td class="fonts d-none d-sm-table-cell d-md-table-cell">
                                <a href="/editproducts?id=<%= item._id %>" class="btn-border-shadow-update" style="text-decoration: none">
                                  <span>
                                    <i class="fa fa-edit" style="color: black; margin-right: 10px"></i>
                                  </span>
                                </a>
                                <a href="/deleteproducts?id=<%= item._id %>" class="btn-border-shadow-update " style="text-decoration: none" onclick="return confirm('Are you sure you want to delete this product?');">
                                  <span>
                                    <i class="fa fa-trash" style="color: black; margin-right: 10px"></i>
                                  </span>
                              </a>
                           
                            </td>
                          </tr>
                          <% }); %>
                          
                          
                          
                          <br>

                          <!-- pagination -->

                          <div class="d-flex justify-content-center align-items-end fixed-bottom">
                            <nav aria-label="...">
                              <ul class="pagination">
                                <a class="page-link bg-transparent border-0" href="" aria-label="Previous"  >
                                  <span aria-hidden="true"  style="color: black;">&laquo;</span> 
                                </a>
                                
                                <%for(let i = 1; i<=totalPages; i++){  %>

                                  <li class="page-item">
                                    <a class="page-link text-dark bg-transparent border border-dark border-start-1 border-end-1 border-top-0 border-bottom-0" href="/viewproducts?page=<%= i %>"><%= i %></a>
                                  </li>
                                  

                               <% } %>
                               <a class="page-link bg-transparent border-0" href="#" aria-label="Next">
                                <span aria-hidden="true" style="color: black;">&raquo;</span>
                              </a>
                              
                               
                             
                            
                              </ul>
                            </nav>
                          </div>
                             <!-- pagination -->

